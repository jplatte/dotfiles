{
    "layer": "top",
    "modules-left": [
        "sway/workspaces"
    ],
    "modules-center": [
        "sway/window"
    ],
    "modules-right": [
        "custom/pacman",
        "custom/battery",
        "custom/df-root",
        "custom/df-home",
        "custom/wifi",
        "pulseaudio",
        "custom/quodlibet-volume",
        "clock#date",
        "clock#clock"
    ],
    "sway/workspaces": {
        "format": "{name}"
    },
    "custom/pacman": {
        "format": " {}",
        "exec": "~/.config/waybar/modules/pacman.sh",
        "interval": "once",
        "signal": 7,
        "on-click": "swaymsg exec -- alacritty -e bash -c '\"pikaur -Syu; pkill -SIGRTMIN+7 waybar\"'",
        "tooltip": false
    },
    "custom/battery": {
        "exec": "~/.config/waybar/modules/battery.sh BAT0",
        "return-type": "json",
        "interval": 15,
        "signal": 2,
        "format": "<span color='#888'>{icon}</span> {}",
        "format-icons": [
            "",
            "",
            "",
            "",
            ""
        ],
        "tooltip": false
    },
    "custom/df-root": {
        "exec": "~/.config/waybar/modules/df.sh /",
        "interval": 60,
        "format": "<span color='#888'> /</span> {}",
        "tooltip": false
    },
    "custom/df-home": {
        "exec": "~/.config/waybar/modules/df.sh /home/jplatte",
        "interval": 60,
        "format": "<span color='#888'> </span> {}",
        "tooltip": false
    },
    "custom/wifi": {
        "exec": "~/.config/waybar/modules/wifi.sh wlp1s0",
        "return-type": "json",
        "interval": "once",
        "signal": 1,
        "format": "{}",
        "on-click": "alacritty -e nmtui",
        "tooltip": false
    },
    "pulseaudio": {
        "format": "<span color='#888'>{icon}</span> {volume} %",
        "format-bluetooth": "<span color='#888'>{icon} </span> {volume} %",
        "format-muted": "<span color='#888'></span>",
        "format-icons": {
            "headphones": "",
            "handsfree": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": [
                "",
                ""
            ]
        },
        "on-click": "pavucontrol",
        "on-scroll-up": "pamixer -i 5",
        "on-scroll-down": "pamixer -d 5",
        "tooltip": false
    },
    "custom/quodlibet-volume": {
        "exec": "~/.config/waybar/modules/quodlibet-volume.sh",
        "interval": 60,
        "format": "<span color='#888'></span> {} %",
        "tooltip": false
    },
    "clock#date": {
        "format": "<span color='#888'></span> {:%d.%m.}",
        "tooltip": false
    },
    "clock#clock": {
        "format": "<span color='#888'></span> {:%H∶%M}",
        "tooltip": false
    }
}
