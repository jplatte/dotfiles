{
    "layer": "top",
    "modules-left": [
        "sway/workspaces"
    ],
    "modules-right": [
        "custom/pacman",
        "custom/mouse-bat",
        "custom/battery#BAT0",
        "custom/battery#BAT1",
        "custom/df-root",
        "custom/df-home",
        "network",
        "custom/owncloud",
        "pulseaudio",
        "clock#date",
        "clock#clock"
    ],
    "sway/workspaces": {
        "format": "{name}"
    },
    "custom/pacman": {
        "format": " {}",
        "exec": "~/.config/waybar/modules/pacman.sh",
        "interval": "once",
        "signal": 7,
        "on-click": "alacritty -e bash -c 'pikaur -Syu; pkill -SIGRTMIN+7 waybar'",
        "tooltip": false
    },
    "custom/mouse-bat": {
        "exec": "~/.config/waybar/modules/mouse-bat.sh",
        "return-type": "json",
        "interval": 60,
        "format": "<span color='#888'></span> {icon}",
        "format-icons": [
            "",
            "",
            "",
            "",
            "",
            ""
        ],
        "on-click": "solaar",
        "tooltip": false
    },
    "custom/battery#BAT0": {
        "exec": "~/.config/waybar/modules/battery.sh BAT0",
        "return-type": "json",
        "interval": 15,
        "signal": 2,
        "format": "<span color='#888'>{icon} ₁</span> {}",
        "format-icons": [
            "",
            "",
            "",
            "",
            ""
        ],
        "tooltip": false
    },
    "custom/battery#BAT1": {
        "exec": "~/.config/waybar/modules/battery.sh BAT1",
        "return-type": "json",
        "interval": 15,
        "signal": 2,
        "format": "<span color='#888'>{icon} ₂</span> {}",
        "format-icons": [
            "",
            "",
            "",
            "",
            ""
        ],
        "tooltip": false
    },
    "network": {
        "format-ethernet": "",
        "format-wireless": "",
        "format-linked": "",
        "format-disconnected": "",
        "on-click": "alacritty -e nmtui",
        "tooltip": false
    },
    "custom/owncloud": {
        "exec": "pgrep owncloud || printf '\n\ninactive'",
        "format": "",
        "interval": 15,
        "on-click": "owncloud",
        "tooltip": false
    },
    "custom/df-root": {
        "exec": "~/.config/waybar/modules/df.sh /",
        "interval": 60,
        "format": "<span color='#888'> /</span> {}",
        "tooltip": false
    },
    "custom/df-home": {
        "exec": "~/.config/waybar/modules/df.sh /home/jplatte",
        "interval": 60,
        "format": "<span color='#888'> </span> {}",
        "tooltip": false
    },
    "pulseaudio": {
        "format": "<span color='#888'>{icon}</span> {volume} %",
        "format-bluetooth": "<span color='#888'>{icon}/span> {volume} %",
        "format-muted": "<span color='#888'></span>",
        "format-icons": {
            "headphones": "",
            "handsfree": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": [
                "",
                ""
            ]
        },
        "on-click": "pavucontrol",
        "on-scroll-up": "pamixer -i 5",
        "on-scroll-down": "pamixer -d 5",
        "tooltip": false
    },
    "clock#date": {
        "format": "<span color='#888'></span> {:%d.%m}",
        "tooltip": false
    },
    "clock#clock": {
        "format": "<span color='#888'></span> {:%H∶%M}",
        "tooltip": false
    }
}
