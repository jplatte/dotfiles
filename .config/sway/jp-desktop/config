# Workspace names
set $ws14 "14:"
set $ws19 "19:"

# Default workspaces for programs
assign [app_id="^net.sourceforge.mumble.mumble$"] $ws14
assign [class="^Slack$"] $ws19

# Output configuration
output HDMI-A-1 pos 0,0
output DVI-D-1 pos 1920,0

# Default outputs for workspaces
workspace $ws1 output HDMI-A-1
workspace $ws2 output HDMI-A-1
workspace $ws3 output HDMI-A-1
workspace $ws21 output DVI-D-1
workspace $ws42 output DVI-D-1

# Autostart
exec signal-desktop
exec riot-desktop
exec env GDK_BACKEND=wayland thunderbird
exec feedreader
exec quodlibet
