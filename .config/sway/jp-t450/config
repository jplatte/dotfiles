# Custom workspace names
set $ws11 number 11
set $ws12 number 12
set $ws13 number 13
set $ws19 "19:ïƒ‚"

# Application specific configuration
assign [app_id="^firefox$"] $ws1
assign [class="^Mattermost$"] $ws2
assign [class="Microsoft Teams"] $ws2
assign [app_id="^desktopclient.owncloud.com.owncloud$"] $ws19

for_window [class="^MATLAB "] layout tabbed
for_window [app_id="^virt-manager$"] layout tabbed

# Teams notifications
for_window [class="Microsoft Teams" title="^Microsoft Teams-Benachrichtigung$"] {
    # Move focus back to the main window / don't focus the notification
    focus tiling
    # Move the notification to the top right
    move position 1600 160
}

# Input configuration
input "2:7:SynPS/2_Synaptics_TouchPad" {
    natural_scroll enabled
    scroll_method two_finger
    tap enabled
}

exec gnome-keyring-daemon -sdc ssh
exec owncloud --logfile /dev/null
exec solaar
exec alacritty -e ~/.local/bin/scripts/monitor-setup
exec teams

# Output configuration
output DP-4 pos 0,0
output DP-3 pos 1920,0

output eDP-1 pos 0,0
output "Sharp Corporation SHARP HDMI 0x00000001" {
    position 1366 0
    scale 2
}

bindswitch --reload lid:on output eDP-1 disable
bindswitch --reload lid:off output eDP-1 enable

# Default outputs for workspaces
workspace $ws1 output DP-4
