{
    // basic settings
    "breadcrumbs.enabled": true,
    "debug.toolBarLocation": "docked",
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.bracketPairColorization.enabled": false,
    "editor.fontFamily": "'Iosevka SS06', 'Font Awesome 5 Free'",
    "editor.fontSize": 12.5,
    "editor.fontLigatures": true,
    "editor.formatOnSave": true,
    "editor.inlayHints.enabled": "off",
    "editor.letterSpacing": 0,
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [
        80,
        100
    ],
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "git.untrackedChanges": "separate",
    "telemetry.telemetryLevel": "off",
    "terminal.integrated.cursorStyle": "underline",
    "terminal.integrated.fontSize": 13,
    "update.mode": "none",
    "update.showReleaseNotes": false,
    "window.zoomLevel": 2,
    "window.menuBarVisibility": "toggle",
    "window.titleBarStyle": "native",
    "workbench.activityBar.visible": true,
    "workbench.editor.showTabs": false,
    "workbench.enableExperiments": false,
    "workbench.iconTheme": "vscode-icons",
    "workbench.settings.editor": "json",
    "workbench.settings.useSplitJSON": true,
    "workbench.settings.enableNaturalLanguageSearch": false,
    "workbench.startupEditor": "newUntitledFile",
    // GitLens
    "gitlens.blame.avatars": false,
    "gitlens.blame.dateFormat": "YYYY-MM-DD",
    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.defaultDateFormat": "YYYY-MM-DD HH:mm:ss",
    "gitlens.defaultDateStyle": "absolute",
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.hovers.enabled": false,
    "gitlens.menus": {
        "editor": false,
        "editorGroup": {
            "blame": true,
            "compare": true,
            "history": false,
            "remote": false
        },
        "editorTab": false,
    },
    "gitlens.mode.active": "zen",
    "gitlens.mode.statusBar.enabled": false,
    "gitlens.showWhatsNewAfterUpgrades": false,
    "gitlens.views.fileHistory.avatars": false,
    "gitlens.views.commits.avatars": false,
    // vscode-icons
    "vsicons.dontShowNewVersionMessage": true,
    "vsicons.projectDetection.disableDetect": true,
    // Rust settings
    "crates.listPreReleases": true,
    "rust-analyzer.checkOnSave.command": "clippy",
    "rust-analyzer.imports.granularity.enforce": true,
    // JS / TS settings
    "javascript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
    "typescript.updateImportsOnFileMove.enabled": "always",
    // latex workshop
    "latex-workshop.chktex.enabled": true,
    "latex-workshop.message.update.show": false,
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.latexindent.args": [
        "-c",
        "%DIR%/",
        "%TMPFILE%",
        "-y",
        "defaultIndent: '%INDENT%'"
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdfxe",
                "-output-directory=output",
                "%DOC%"
            ]
        }
    ],
    // file type overrides
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[markdown]": {
        "files.trimTrailingWhitespace": false,
        "editor.formatOnSave": false
    },
    "[toml]": {
        "editor.formatOnSave": false
    },
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
}
